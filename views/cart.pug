script(src="shopping.pug")
script.
    function close(remove, tile) {
        document.querySelector(remove).addEventListener('click', () => {
            let popup = document.getElementById(tile);
            let show = 'none';
            popup.style.display = show;
        });
    }

    close('#remove-sponge', 'sponge-tile');
    close('#remove-treacle', 'treacle-tile');
    close('#remove-concave', 'concave-tile');