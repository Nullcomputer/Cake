style.
    *{padding: 0; margin: 0; --GREENY: #42f5a4; --BLUEY: #42c2f5; --YELLOWY: lightgoldenrodyellow;}
    body {
        background: linear-gradient(to right, var(--GREENY), var(--BLUEY));
    }
    nav {
        width: 20%;
        height: 80%;
        margin: 20px 0px 0px 20px;
        padding: 20px;
        background: white;
        border-radius: 20px 0px 0px 0px;
        float: left;
    }
    li {
        list-style: none;
        margin: 0px 0px 0px 20px;
        padding: 10px 125px 10px 5px;
        width: 40%;
    }
    li:hover {
        background: var(--YELLOWY);
    }
    #important-title {
        color: red;
    }
    a  {
        text-decoration: none;
        color: black
    }
    #title {
        font-size: 70px;
        padding-bottom: 30px;
        text-align: center;
    }
    #home {
        height: auto;
        width: 20%;
        font-size: 30px;
        text-align: center;
        margin: 10px 0px 0px 25px;
        padding: 10px;
        background: white;
        border-radius: 20px;
        float: left;
    }
    #homewards-nav {
        display: none;
        list-style: none;
        color: var(--BLUEY);
    }
    #home:hover{
        background: var(--YELLOWY);
    }
    
    #main {
        float: right;
        margin: 20px 20px 0px 0px;
        height: 90%;
        width: 70%;
        background: white;
        padding: 20px;
        border-radius: 0px 0px 20px 0px;
        overflow-x: hidden;
        overflow-y: auto;
        
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }
    #main::-webkit-scrollbar {
        display: none;
    }
    #homewards-main {
        display: none;
        position: sticky;
        font-size: 17px;
        top: 95%;
        left: 95%;
        background: var(--YELLOWY);
        padding: 15px;
    }
    #account, #themes, #more {
        height: 700px;
    }
    #important {
        height: 620px;
    }
    #submit {
        padding: 2px 10px;
        margin: 6px 0px 0px 0px;
        background: var(--YELLOWY);
        border: none;
    }
    .themeLabel {
        padding: 0px 0px 0px 10px;
    }
    .themes {
        margin: 0px 0px 0px 50px;
    }
    .subtitle {
        font-size: 40px;
        font-weight: bolder;
    }
    .content {
        font-size: 20px;
        margin: 5px 5px 5px 20px;
    }
    @media only screen and (max-height: 635px) {
        #home {
            display: none;
        }
        #homewards-nav {
            display: initial;
        }
        #main {
            height: 85%;
        }
        nav {
            height: 85%;
        }
    }
    @media only screen and (max-height: 540px) {
        #main {
            margin: 10px 20px 0px 0px;
        }
        nav {
            margin: 10px 0px 0px 20px;
        }
    }
    @media only screen and (max-width: 1230px) {
        #main {
            width: 68%;
        }
    }
    @media only screen and (max-width: 1020px) {
        #main {
            width: auto;
            margin: 15px;
        }
        nav {
            display: none;
        }
        #home {
            display: none;
        }
        #homewards-main {
            display: initial;
        }
    }