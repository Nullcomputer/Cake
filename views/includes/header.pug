  .header {
    background: linear-gradient(to right, #ff909f, #ffff48);
    position: fixed;
    display: flex;
    flex-direction: row;
    width: 100%;
    border-bottom: 1px solid grey;
  }
  .button {
    font-family: 'Product Sans';
    font-size: 30px;
    color: #221E22;
    text-decoration: none;
    background-color: #FFFFFF;
    padding: 7px;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 3px;
    margin: 10px;
    font-weight: bolder;
  }
  .search_bar {
    padding-top: 5px 10px;
    border: none;
    padding-left: 5px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    outline: none;
    font-size: 24px;
    font-family: 'Product Sans';
  }
  .search_items {
    margin-left: auto;
    margin-right: 25px;
    margin-top: auto;
    margin-bottom: auto;
    display: inherit;
    display: flex;
  }
  .search_icon  {
    padding: 5px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border: none;
    font-family: 'Product Sans';
    font-size: 20px;
    padding-left: 10px;
    padding-right: 10px;
  }
  @media only screen and (max-width: 1320px) {
    .button {
      font-size: 20px;
    }
  }
  @media only screen and (max-width: 1110px) {
    .search_items {
      display: none;
    }
  }
  @media only screen and (max-width: 660px) {
    .button {
      display: none;
    }
    .header {
      height: 70px;
    }
    
  }

