style.
  *{padding: 0; margin: 0; --GREENY: #42f5a4; --BLUEY: #42c2f5; --YELLOWY: lightgoldenrodyellow;}
  #cart{padding: 15px;}
  #settings{padding: 15px;}
  /* Bainrow title */
  /* #header_button {
  background-image: linear-gradient(to top left, red, indigo, var(--BLUEY), yellow, orange, red);   -webkit-background-clip: text;
  color: transparent;
  } */
  #login-button{
  /*Logged in - green*/
  background-color: var(--GREENY);
  color: #FFFFFF;/**/
  /*logged out - red
  background-color: #fc1e1e;
  color: #FFFFFF;/**/
  }
  .header {
    background: linear-gradient(to right, var(--GREENY), var(--BLUEY));
    position: fixed;
    display: flex;
    flex-direction: row;
    width: 100%;
  }
  .button {
    font-family: 'Product Sans';
    font-size: 30px;
    color: #221E22;
    text-decoration: none;
    background-color: #FFFFFF;
    padding: 7px;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 3px;
    margin: 10px;
    font-weight: bolder;
  }
  .search_bar {
    padding-top: 5px 10px;
    border: none;
    padding-left: 5px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    outline: none;
    font-size: 24px;
    font-family: 'Product Sans';
  }
  .search_items {
    margin: auto 25px auto auto;
    display: flex;
  }
  .search_icon  {
    border-radius: 0px 10px 10px 0px;
    border: none;
    font-family: 'Product Sans';
    font-size: 20px;
    padding: 5px 10px;
  }
  @media only screen and (max-width: 1320px) {
    .button {
      font-size: 20px;
    }
  }
  @media only screen and (max-width: 1110px) {
    .search_items {
      display: none;
    }
  }
  @media only screen and (max-width: 660px) {
    .button {
      display: none;
    }
    .header {
      height: 70px;
    }
    
  }

