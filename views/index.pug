style.
    *{padding: 0; margin: 0;}
    html {
        scroll-behavior: smooth;
    }
    body {
        background: #d8f1e6;
    }
    #welcome {
        padding: 185px 100px;
    }
    #home {
        margin: 10px 20px;
        padding: 20px 0px;
        background: white;
        text-align: center;
        color: #221E22;
    }

    .title {
        font-size: 100px;
    }
    
    .subtitle {
        font-size: 50px;
        padding: 0px 0px 20px 20px;
    }

    .left {
        text-align: left;
    }
    .right {
        text-align: right;
    }

    .btn {
        background-color: #9832a6;
        border: none;
        color: white;
        padding: 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 16px 2px;
        border-radius: 12px;
        text-align: center;
        width: 200px;
    }
    .tile-img-right, .tile-img-left {
        text-align: center;
        background: #F9FAE8;
    }
    .tile-img-right img, .tile-img-left img {
        margin: 25px 40px;
        height: 180px;
        border: 1px solid black;
    }
    .tile-img-right img {
        float: right;
    }
    .tile-img-left img {
        float: left;
    }
    .content {
        font-size: 30px;
        padding: 10px 100px 100px;
        margin: 0px 20px;
    }

    @media only screen and (max-width: 1320px) {
        .btn {
            width: 100px;
        }
        .subtitle {
            font-size: 40px;
        }
    }
    @media only screen and (max-width: 1110px) {
        .btn {
            width: 75px;
        }
        .subtitle {
            font-size: 35px;
        }
    }
    @media only screen and (max-width: 660px) {
        .btn {
            width: 30px;
        }
        .tile-img-right img, .tile-img-left img {
            height: 100px;
        }
        .left, .right {
            text-align: center;
        }
        .subtitle {
            font-size: 35px;
            padding: 0px;
        }
    }